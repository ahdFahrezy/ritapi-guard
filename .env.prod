# === Django ===
DJANGO_ENV=prod
APP_VERSION="0.1.0"
SECRET_KEY=change-this-to-a-very-strong-secret-key
DEBUG=0
ALLOWED_HOSTS=ritapi.example.com,www.ritapi.example.com
ALLOW_IPS=127.0.0.1   # only specific internal IPs can bypass middleware

# === Backend Service ===
TARGET_BACKEND=http://127.0.0.1:7000

# === Database (Postgres) ===
POSTGRES_DB=ritapi
POSTGRES_USER=ritapi
POSTGRES_PASSWORD=super-strong-password
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# === Redis / Celery (optional if you use async tasks) ===
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# === Email (use real provider in production, not Mailtrap) ===
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=alerts@ritapi.example.com
EMAIL_HOST_PASSWORD=app-password-or-api-key
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=alerts@ritapi.example.com
ALERT_EMAIL_TO=secops@ritapi.example.com

# === Security ===
#SECURE_SSL_REDIRECT=True
#SECURE_HSTS_SECONDS=31536000  # 1 year

BACKEND_RESPONSE_CACHE_TTL=30
ASN_TLS_CACHE_TTL=900
MAX_SERVICES=5